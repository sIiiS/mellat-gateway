<?xml version="1.0"?>

<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <payment>
            <mellat>
                <active>1</active>
                <model>MellatFacade</model>
                <title>Mellat Online Gateway</title>
                <tooman_currency>0</tooman_currency>
                <allowspecific>1</allowspecific>
                <specificcountry>IR</specificcountry>
                <order_status>pending</order_status>
                <complete_order_status>processing</complete_order_status>
                <cancel_order_status>canceled</cancel_order_status>
                <invoice>0</invoice>
                <is_gateway>1</is_gateway>
                <can_use_checkout>1</can_use_checkout>
                <can_use_internal>1</can_use_internal>
                <payment_action>order</payment_action>
                <password backend_model="Magento\Config\Model\Config\Backend\Encrypted" />
                <wsdl>https://bpm.shaparak.ir/pgwchannel/services/pgw?wsdl</wsdl>
                <cgi_url>https://bpm.shaparak.ir/pgwchannel/startpay.mellat</cgi_url>
            </mellat>
        </payment>
    </default>
</config>
